global:
  scrape_interval: 1s
  external_labels:
    container_run: "${CONTAINER_RUN_ID}"

scrape_configs:
  - job_name: sglang
    static_configs:
      - targets: ["localhost:30000"]

  - job_name: sglang-router
    static_configs:
      - targets: ["localhost:29000"]

  - job_name: dcgm
    static_configs:
      - targets: ["localhost:9400"]

  - job_name: node
    static_configs:
      - targets: ["localhost:9100"]

  - job_name: benchmark
    metrics_path: /metrics
    honor_labels: true
    static_configs:
      - targets: []
